<?xml version="1.0" encoding="utf-8"?>
<Config>
	<!-- These are suggestions but you can design this config file how you think is best, it is pretty slim as it is so not sure what else you could do -->
	<Files>
		<!-- Each File tag block is to process a file type and possibly a specific name or word(s) in the name. The stored procedure in the tag here is the sp to process this specific file -->
		<File>
			<StringOrSubstringToFind>customers</StringOrSubstringToFind>
			<StoredProcedure>usp_insert_customers_csv</StoredProcedure>
			<Parameters>
				<Parameter>
					<Name>@param1</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param2</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param3</Name>
					<Type>Integer</Type>
				</Parameter>
			</Parameters>
		</File>
		<File>
			<StringOrSubstringToFind>customers_abc</StringOrSubstringToFind>
			<StoredProcedure>usp_insert_customers_abc_csv</StoredProcedure>
			<Parameters>
				<Parameter>
					<Name>@param1</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param2</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param3</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param4</Name>
					<Type>Boolean</Type>
				</Parameter>
			</Parameters>
		</File>
		<File>
			<StringOrSubstringToFind>products</StringOrSubstringToFind>
			<StoredProcedure>usp_insert_products_xlsx</StoredProcedure>
			<Parameters>				
				<Parameter>
					<Name>@param1</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param2</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param3</Name>
					<Type>Integer</Type>
				</Parameter>
			</Parameters>
		</File>
		<File>
			<StringOrSubstringToFind>products_food</StringOrSubstringToFind>
			<StoredProcedure>usp_insert_products_food_xlsx</StoredProcedure>
			<Parameters>
				<Parameter>
					<Name>@param1</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param2</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param3</Name>
					<Type>Varchar</Type>
				</Parameter>
				<Parameter>
					<Name>@param4</Name>
					<Type>Date</Type>
				</Parameter>
			</Parameters>
		</File>
	</Files>
	<!-- These are relative to the project file structure based on this config files location -->
	<!-- Store these paths in a data folder to have better organization -->
	<FilePaths>
		<!-- example path to file to process relative to this config.xml file location -->
		<StartFolder>..\..\..\Data\Start</StartFolder>
		<EndFolder>..\..\..\Data\End</EndFolder>
		<ConfigFile>..\..\..\Data\config.xml</ConfigFile>
	</FilePaths>
	<!-- How to manage Dev and Prod -->
	<ConnectionString>connection for PostgreSQL</ConnectionString>
</Config>